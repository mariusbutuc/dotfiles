[color]
        branch = auto
        diff = auto
        status = auto
        interactive = auto
        ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[user]
        name = Marius Butuc
        email = marius.butuc@gmail.com
        affiliation = Shopify
[alias]
        co = checkout
        ci = commit
[core]
        excludesfile = ~/.gitignore
        whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[github]
        user = mariusbutuc
[pull]
        rebase = true
[push]
        default = simple
